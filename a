-- CONFIG: Set these per your net, or make them dynamic if you want
local FISH_PER_NET = 4           -- Max fish your net can hold
local TOTAL_REEL_PRESSES = 12    -- How many times you'd normally have to click to reel

-- The latest vector position for the water, from your log
local FISH_VECTOR = Vector3.new(283.98358154296875, 27.99997329711914, -204.96829223632812)

-- List of fish to use, from your log. Can randomize or just cycle.
local FISH_TYPES = {"RainbowTrout", "Perch", "Carp"}

-- Float values to use (randomized or cycled)
local FLOATS = {1.18, 1.35, 1.13, 1.71}

-- Status
local attractActive = false
local reelActive = false

-- GUI Setup (as before, tabs + scrollable + minimize/maximize)
