local minimized = false

local tabBtnHolder = Instance.new("Frame")
tabBtnHolder.Size = UDim2.new(1, 0, 0, 38)
tabBtnHolder.Position = UDim2.new(0,0,0,38)
tabBtnHolder.BackgroundTransparency = 1
tabBtnHolder.Parent = window

local tabNames = {"Fishing", "Sell Teleport", "Zone Teleport", "Boss Teleport"}
local tabs = {}
local tabBtns = {}
for i, tabName in ipairs(tabNames) do
    local btn = Instance.new("TextButton")
    btn.Text = tabName
    btn.Font = Enum.Font.Gotham
    btn.TextSize = 16
    btn.Size = UDim2.new(0, 105, 1, 0)
    btn.Position = UDim2.new(0, (i-1)*105, 0, 0)
    btn.BackgroundColor3 = Color3.fromRGB(65,65,65)
    btn.TextColor3 = Color3.new(1,1,1)
    btn.Parent = tabBtnHolder
    tabBtns[i] = btn

    local tab = Instance.new("Frame")
    tab.Name = tabName:gsub(" ", "").."Tab"
    tab.BackgroundTransparency = 1
    tab.Size = UDim2.new(1, 0, 1, -76)
    tab.Position = UDim2.new(0, 0, 0, 76)
    tab.Visible = (i == 1)
    tab.Parent = window
    tabs[i] = tab
end

local function showTab(idx)
    if minimized then return end
    for i, tab in ipairs(tabs) do
        tab.Visible = (i == idx)
    end
    tabBtnHolder.Visible = true
end
for i, btn in ipairs(tabBtns) do
    btn.MouseButton1Click:Connect(function()
        showTab(i)
    end)
end

minBtn.MouseButton1Click:Connect(function()
    minimized = true
    for _, tab in ipairs(tabs) do tab.Visible = false end
    tabBtnHolder.Visible = false
    window.Size = UDim2.new(0,420,0,38)
end)
maxBtn.MouseButton1Click:Connect(function()
    minimized = false
    window.Size = UDim2.new(0,420,0,320)
    tabBtnHolder.Visible = true
    showTab(1)
end)
showTab(1)

-- Status function (updates ON/OFF color)
local attractStatus, reelStatus
local function updateStatus()
    if attractStatus then
        attractStatus.Text = attractActive and "ON" or "OFF"
        attractStatus.TextColor3 = attractActive and Color3.fromRGB(60, 220, 110) or Color3.fromRGB(220, 60, 60)
    end
    if reelStatus then
        reelStatus.Text = reelActive and "ON" or "OFF"
        reelStatus.TextColor3 = reelActive and Color3.fromRGB(60, 220, 110) or Color3.fromRGB(220, 60, 60)
    end
end

